{{#if product.isValid}}
<div>

    <h1>Bienvenido {{user.name}}</h1>
    <h2>Tu rol es {{user.rol}}</h2>

    <button id="logout">Cerrar sesion</button>

    {{#each product.docs}}

    <div>
        <p>Nombre del producto : {{this.title}}</p>
        <p>Precio del producto : {{this.price}}</p>
        <p>Categoria del producto : {{this.category}}</p>
        <button>Agregar al carrito</button>
    </div>

    <br/>

    {{/each}}

</div>

<br/>

<div>
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}> -- Anterior </a>
    {{/if}}

    &nbsp;
    {{this.page}}
    &nbsp;

    {{#if hasNextPage}}
        <a href={{this.nextLink}}> Siguiente --</a>
    {{/if}}
</div>

{{else}}
<h1>No hay productos</h1>
{{/if}}

<script src="/js/logout.js"></script>